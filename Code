  <script>
    const inventory = [];

    function addItem(name) {
      if (!inventory.includes(name)) {
        inventory.push(name);
        renderInventory();
      }
    }

    function renderInventory() {
      const el = document.getElementById('items');
      el.innerHTML = '';
      inventory.forEach(item => {
        const span = document.createElement('span');
        span.className = 'item';
        span.innerText = item;
        el.appendChild(span);
      });
    }

    function check1() {
      if (code1.value === '246') {
        msg1.innerText = 'Richtig! Du hast einen SchlÃ¼ssel gefunden.';
        addItem('ğŸ”‘ SchlÃ¼ssel');
        riddle2.classList.remove('hidden');
      } else msg1.innerText = 'Falsch!';
    }

    function check2() {
      if (code2.value.toLowerCase() === 'schluessel') {
        msg2.innerText = 'Richtig! Ein Zettel mit Buchstaben.';
        addItem('ğŸ“„ Zettel (POR)');
        riddle3.classList.remove('hidden');
      } else msg2.innerText = 'Falsch!';
    }

    function check3() {
      if (code3.value.toLowerCase() === 'por') {
        msg3.innerText = 'Richtig!';
        addItem('ğŸšª Ausgangscode');
        finish.classList.remove('hidden');
      } else msg3.innerText = 'Falsch!';
    }
  </script>
